             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogicGamesAndroid.MainPage">

    <StackLayout VerticalOptions="Center"
                 Margin="20,0,20,0">
        <Entry x:Name="Nick"
               Placeholder="Nazwa"/>
        <Button x:Name="loginButton" 
                Margin="0,40,0,0"
                Text="Login"
                Clicked="loginButton_Clicked"/>
    </StackLayout>

</ContentPage>
